<%= form_for(@obj, :remote => true, :url => {:controller => "panel", :action => (action_name == "editar" ? "editar" : "crear"), :params => {:set => params[:set], :id => (@obj.id if action_name == "editar")}}, :html => { :multipart => true }) do |f| %>
  <% if @obj.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@obj.errors.count, "error") %> impidieron generar este objeto:</h2>

      <ul>
      <% @obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <div class="field">
    <%= f.label :nombre, "Nombre" %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :extension, "Extensión" %><br>
    <%= f.text_field :extension %>
  </div>
  <div class="field">
    <%= f.label :correo, "Correo electrónico" %><br>
    <%= f.text_field :correo %>
  </div>
  <div class="field">
    <%= f.label :area, "Área de trabajo" %><br>
    <%= f.text_field :area, value: "Centro de Estudios Internacionales" %>
  </div>
  <div class="field">
    <%= f.label :servicio, "Servicios" %><br>
    <%= f.text_area :servicio %>
  </div>
  <div class="actions">
    <%= f.submit "Generar personal académico" %>
  </div>
<% end %>
